<h2>Student Administration Portal</h2>

<%= link_to 'Add new student', new_student_path %>

<h3>Listing students</h3>

<table>
  <tr>
    <th>Name</th>
    <th>Major</th>
  </tr>

  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.major %></td>
        <td><%= link_to 'Show', student_path(student) %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure you want to remove this student?'} %></td>
      </tr>
  <% end %>
</table>
